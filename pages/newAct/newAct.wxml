<!--pages/newAct/newAct.wxml-->
<cu-custom bgColor="bg-yellow" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">新建活动发布</view>
</cu-custom>
<view class="flex  padding justify-between">
  <view class=" padding-sm  ">新建活动发布</view>
  <view class="flex  padding justify-end">
    <!-- <button class="cu-btn bg-gray">取消</button> -->
    <button class="cu-btn bg-green">发布</button>
  </view>
</view>

<form>
  <view class="cu-form-group ">
    <view class="title">活动名称</view>
    <input placeholder='输入活动名称' ></input>
  </view>
  <view class="cu-form-group ">
    <view class="title">活动类型</view>
    <picker bindchange="PickerChangeAct" value="{{index2}}" range="{{picker2}}">
			<view class="picker">
				{{index2?picker2[index2]:'请选择活动类型'}}
			</view>
		</picker>
  </view>
  <view class="cu-form-group ">
    <view class="title">活动时间</view>
     <!--> <input value='{{time}}' placeholder='选择时间' /> -->
    <picker mode="multiSelector" value="{{dateTime}}" bindchange="DateTimeChange" bindcolumnchange="changeDateTimeColumn" range="{{dateTimeArray}}">
    <view class="picker">
      {{dateTimeArray[0][dateTime[0]]}}-{{dateTimeArray[1][dateTime[1]]}}-{{dateTimeArray[2][dateTime[2]]}} {{dateTimeArray[3][dateTime[3]]}}:{{dateTimeArray[4][dateTime[4]]}}
    </view>
        </picker>
  </view>
  <view class="cu-form-group">
		<view class="title">报名截止日期</view>
		<picker mode="date" value="{{date}}" start="{{minDate}}" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group ">
		<view class="title">招募人数</view>
		<picker bindchange="PickerChange" value="{{index}}" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'选择活动招募人数'}}
			</view>
		</picker>
	</view>
  <!-- <view class="cu-form-group">
		<view class="title">活动地址</view>
		<picker mode="region" bindchange="RegionChange" value="{{region}}" custom-item="{{customItem}}">
			<view class="picker">
				{{region[0]}}，{{region[1]}}，{{region[2]}}
			</view>
		</picker>
	</view> -->
  <view class="cu-form-group ">
		<view class="title">活动简介</view>
		<textarea  maxlength="-1" bindinput="textareaBInput" placeholder="简要描述活动内容"></textarea>
	</view>
